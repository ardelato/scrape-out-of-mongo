<div class="container text-center">
    <div class="jumbotron ">
        <div class="container">
            <h1 class="display-4">Scraping Articles on Coding</h1>
        </div>
    </div>
</div>

<div class="articleContainer .container">
    <div class="row">
        {{#each article}}
        <div class="col-md-3 d-flex align-items-stretch">
            <div class=" card my-4" style=" width: 18rem; margin:0 auto">
                <a href={{link}} target="_blank">
                    <img src={{image}} class="card-img-top" alt={{headline}}>
                    <div class="card-body">
                        <h5 class="card-title">{{headline}}</h5>
                        <p class="card-text">{{summary}}</p>
                    </div>
                </a>
                <button type="button" style="width:50%;margin:0 auto" class="btn btn-primary"
                    data-toggle="modal">Comment</button>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="modal" id="comment" data-backdrop="false" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Comments</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>